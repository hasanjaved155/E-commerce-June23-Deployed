<% layout('layout/boilerplate') -%>
<form method="POST" action="/products/<%=product._id%>?_method=PATCH">
  <div class="mb-3">
    <label class="form-label" for="name">Name</label>
    <input
      class="form-control"
      type="text"
      name="name"
      id="name"
      value=<%=product.name%> />
  </div>
  <div class="mb-3">
    <label class="form-label" for="image">Image Url</label>
    <input
      class="form-control"
      type="text"
      name="imageUrl"
      id="image"
      value=<%=product.imageUrl%> />
  </div>
  <div class="mb-3">
    <label class="form-label" for="price">Price</label>
    <input
      class="form-control"
      type="number"
      name="price"
      id="price"
      value=<%=product.price%> />
  </div>
  <div class="mb-3">
    <label class="form-label" for="desc">Description</label>
    <textarea class="form-control" name="desc" id="desc" cols="30" rows="5">
            <%= product.desc %>
        </textarea
    >
  </div>
  <button class="btn btn-success btn-sm">Edit</button>
</form>
